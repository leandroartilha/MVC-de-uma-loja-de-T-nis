@model CarrinhoCompraViewModel

<div class="container">
    <div class="row">

        <img src="˜/images/cartzin.png"/>

        <div>
            <h4>
                Seu carrinho de compras :
            </h4>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>tenis</th>
                    <th class="text-right">Preço</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model.CarrinhoCompra.CarrinhoCompraItems)
            {
                <tr>
                    <td class="text-center">@item.Quantidade</td>
                    <td class="text-left">@item.Tenis.TenisNome</td>
                    <td class="text-center">R$ @item.Tenis.Preco</td>

                    <td class="text-center">
                        @((item.Quantidade * item.Tenis.Preco))
                    </td>

                    <td class="text-center">
                        <a asp-controller="CarrinhoCompra" asp-action="RemoverItemDoCarrinhoCompra"
                           asp-route-tenisId="@item.Tenis.TenisId"><img src="˜/images/bin.png"/>
                        </a>
                    </td>
                </tr>
            }
            </tbody>

            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total:</td>
                    <td class="text-right">
                        R$ @Model.CarrinhoCompraTotal
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-sucess" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn primary" asp-controller="Tenis" asp-action="ListarTenis">Continuar Comprando</a>
            </div>
        </div>

    </div>
</div>
